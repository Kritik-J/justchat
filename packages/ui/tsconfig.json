{
  "extends": "@justchat/tsconfig/react-library.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src/",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "openapi",
    "scripts"
  ]
}